<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="text/stylesheet" href="..\..\Content\Site.css" type="text/css" />
    <script type="text/javascript" src="https://stage.centili.com/widget/js/c-mobile-payment-scripts.js"></script>
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

        nav {
            position: fixed !important;
            top: 0px !important;
            right: 0px;
            left: 0px;
            margin-bottom: 0px;
            width: 100%;
            z-index: 1;
        }



        .navbar a {
            color: grey;
        }

            .navbar a:hover {
                color: lightgrey;
                text-decoration: none;
            }


        a {
            color: grey;
        }

            a:hover {
                color: black;
            }
    </style>

    <script>


    </script>
</head>
<body>
    <nav class="navbar navbar-expand-md bg-dark navbar-dark">
        <!-- Brand -->
        @Html.ActionLink("Auctions", "Index", "Auctions", new { area = "" }, new { @class = "navbar-brand" })

        <!-- Toggler/collapsibe Button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
                <li class="nav-item" style="margin-right:20px">
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Auction options
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @Html.ActionLink("All auctions", "Index", "Auctions", null, htmlAttributes: new { @class = "dropdown-item" })

                            @if (User.Identity.IsAuthenticated)
                            {



                                @Html.ActionLink("My auctions", "MyAuctions", "Auctions", null, htmlAttributes: new { @class = "dropdown-item" })

                                @Html.ActionLink("Won auctions", "WonAuctions", "Auctions", null, htmlAttributes: new { @class = "dropdown-item" })

                            }
                            @if (User.IsInRole("Administrator"))
                            {

                                @Html.ActionLink("Start auctions", "ReadyAuctions", "Auctions", null, htmlAttributes: new { @class = "dropdown-item" })

                            }




                        </div>
                    </div>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item" style="margin-right:20px;">@Html.ActionLink("Order tokens", "OrderTokens", "Orders", null, htmlAttributes: new { @class = "" })</li>
                }
                @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                {
                    <li class="nav-item" style="margin-right:20px;">@Html.ActionLink("Edit token information", "Edit", "InformationsForAdministrators", null, htmlAttributes: new { @class = "" })</li>
                }
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item" style="margin-right:20px;">@Html.ActionLink("My orders", "Index", "Orders", null, htmlAttributes: new { @class = "" })</li>
                }
              <!--  @if (User.Identity.IsAuthenticated && User.IsInRole("Administrator"))
                {
                    <li class="nav-item" style="margin-right:20px;">@Html.ActionLink("Accept orders", "IndexAdmin", "Orders", null, htmlAttributes: new { @class = "" })</li>
                }
-->



            </ul>
            @Html.Partial("_LoginPartial")


        </div>
    </nav>
    <div style="height:70px;margin-bottom:10px;">
        &nbsp;
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Tijana Jovanović</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
   

        <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
        <script src="~/signalr/hubs"></script>
        
    </body>
</html>
